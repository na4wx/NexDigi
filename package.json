{
  "name": "nexdigi",
  "version": "0.8.100225",
  "private": true,
  "scripts": {
    "start": "node ./server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch server --ignore server/data --ignore 'server/data/**' --ignore '**/*.json' --ext js --exec node server/index.js",
    "dev:client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "serialport": "^10.5.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "NexDigi - modern APRS digipeater foundation (Node + React + MUI)"
}
